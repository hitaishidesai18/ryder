<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.addRequest.AddRequest">









    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="@color/ochre"
        app:cardCornerRadius="20dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.9">

            <TextView
                android:id="@+id/textViewPickup"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text"
                android:text="Pickup:"/>
            <EditText
                android:id="@+id/editViewPickup"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/styles"
                android:hint="pickup location"/>

        <TextView
            android:id="@+id/textViewDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/large_text"
            android:text="@string/destination">

        </TextView>
        <EditText
            android:id="@+id/editTextDestination"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:hint="@string/destination"

            android:background="@drawable/styles">

        </EditText>
        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textSize="@dimen/large_text"
           >

        </TextView>
        <EditText
            android:id="@+id/editViewDateTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:background="@drawable/styles"
            android:hint="@string/date_time"
            >

        </EditText>
        <TextView
            android:id="@+id/chooseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose type:"
            android:textSize="@dimen/large_text"
            >

        </TextView>
       <Spinner
           android:id="@+id/vehicle_type_spinner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </Spinner>
            <TextView
                android:id="@+id/chooseCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected capacity of the ride:"
                android:textSize="@dimen/large_text"
                >

            </TextView>
            <Spinner
                android:id="@+id/capacity_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submit_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:backgroundTint="@color/ochre"
        android:text="Request" />

</FrameLayout>